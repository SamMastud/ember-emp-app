<div class="jumbo">
  {{!-- <div class="right niyuj-logo"></div> --}}
  <button class="right button" {{action "toggleModal" this}}>Add User</button>
  <h3>Welcome!</h3>
  <p>We hope you find exactly what you're looking for in a place to stay.</p>
</div>

<div class="">
    <article class="listing list-header m-w-800">
        <div class="detail avatar">
            <span>Avtar</span>
        </div>
        <div class="detail">
            <span>Name</span>
        </div>
        <div class="detail">
            <span>Status</span>
        </div>
        <div class="detail avatar">
            <span>Age</span>
        </div>  
        <div class="detail">
            <span>Location</span>
        </div>
        <div class="detail">
            <span>Email</span>
        </div>
    </article>
    <div class="employee-layout m-w-800">
        {{#each model.users as |item|}}
            {{#if item.id}}
                {{user-listing user=item}}
            {{/if}}
        {{/each}}
    </div>
</div>
{{#if isShowingModal}}
  <div class="create-user">
    <div class="create-layout">
        <div class="text-center">
            <h4>Create new profile</h4>
            </div>
            <div class="input-lable">Name:</div>
            <div class="emp-input">{{input class="ao-input" type="text" value=model.user.name placeholder="Name" size="30" maxlength="101"}}</div>
            <div class="input-lable">Age:</div>
            <div class="emp-input">
                {{input type="text" value=model.user.age placeholder="Age" size="30" maxlength="101"}}
            </div>
            <div class="input-lable">Marital Status:</div>
            <div class="emp-input">
                {{input type="text" value=model.user.status placeholder="Status" size="30" maxlength="101"}}
            </div>
            <div class="input-lable">Location:</div>
            <div class="emp-input">
                {{input type="text" value=model.user.city placeholder="Location" size="30" maxlength="101"}}
            </div>
            <div class="input-lable">Email:</div>
            <div class="emp-input">
                {{input type="text" value=model.user.email placeholder="Email" size="30" maxlength="101"}}
            </div>
            <h4>Current Address</h4>
            <div class="input-lable">Street:</div>
            <div class="emp-input">
                {{input type="text" value=model.user.street placeholder="Street" size="30" maxlength="101"}}
            </div>
            <div class="input-lable">Pin Code:</div>
            <div class="emp-input">
                {{input type="text" value=model.user.pin-code placeholder="Pin Code" size="30" maxlength="101"}}
            </div>
            <div class="input-lable">Country:</div>
            <div class="emp-input">
                {{input type="text" value=model.user.country placeholder="Country" size="30" maxlength="101"}}
            </div>
            <h4>Permanant Address</h4>
            <div class="input-lable">Street:</div>
            <div class="emp-input">
                {{input type="text" value=model.user.street placeholder="Street" size="30" maxlength="101"}}
            </div>
            <div class="input-lable">Pin Code:</div>
            <div class="emp-input">
                {{input type="text" value=model.user.pin-code placeholder="Pin Code" size="30" maxlength="101"}}
            </div>
            <div class="input-lable">Country:</div>
            <div class="emp-input">
                {{input type="text" value=model.user.country placeholder="Country" size="30" maxlength="101"}}
            </div>
        <div class="p-t-10 text-center">
        <button class="button" onclick={{action (mut isShowingModal) false}}>Close</button>
        <button class="button" onclick={{action  (route-action 'saveUser' this model.user)}}>Save</button>
        </div>
    </div>
  </div>
{{/if}}